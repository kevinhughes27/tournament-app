{
  "name": "ultimate-tournament",
  "scripts": {
    "postdeploy": "bundle exec rake db:setup"
  },
  "env": {
    "BUILDPACK_URL": {
      "required": true
    },
    "FACEBOOK_APP_ID": {
      "required": true
    },
    "FACEBOOK_APP_SECRET": {
      "required": true
    },
    "GOOGLE_CLIENT_ID": {
      "required": true
    },
    "GOOGLE_CLIENT_SECRET": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "LOG_LEVEL": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1
    },
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql",
    "papertrail",
    "rollbar",
    "sendgrid",
    "ssl",
    "newrelic"
  ],
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-multi.git"
    }
  ]
}
