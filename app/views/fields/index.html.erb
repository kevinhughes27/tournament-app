<div class="row">
  <h1>Fields</h1>
  <p>Draw your fields by clicking on the map below:</p>
</div>

<div class="row">
  <div id="map-canvas" style="width:100%; height: 700px;"></div>
</div>

<div class="row">
  <table id="fields" class="table table-striped">
    <thead>
      <tr>
        <th>Field</th>
        <th>p1</th>
        <th>p2</th>
        <th>p3</th>
        <th>p4</th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>

<div class="row">
  <%= link_to 'Back to tournament', tournaments_path, class: "btn btn-default" %>
</div>

<script>
  $( document ).ready(function() {
    fieldCreator = new TournamentApp.FieldCreator(
      <%= @tournament.location %>,
      <%= @tournament.zoom %>
    );
  });
</script>
