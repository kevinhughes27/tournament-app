<%= signup_card error: @tournament.errors.present? do %>
  <%= form_for @tournament, url: setup_path do |form| %>

    <div class="form-group">
      <%= form.text_field :name,
                          placeholder: 'Tournament name',
                          class: 'form-control input-lg',
                          autofocus: true,
                          autocomplete: false %>
      <% if @tournament.errors.present? %>
        <span class="error_message help-block">
          <%= @tournament.errors.full_messages.first %>
        </span>
      <% end %>
    </div>

    <div id="tournament_url_container" style="display: none; padding-bottom: 10px;">
      <div class="subdued">
        Your tournament will be available at:
      </div>
      <div id="tournament_url">
        https://ultimate-tournament.io/
      </div>
    </div>

    <%= form.hidden_field :handle %>

    <div class="signup-next-btn">
      <%= form.submit "Next", class: 'btn btn-lg btn-primary' %>
    </div>

  <% end %>
<% end %>
