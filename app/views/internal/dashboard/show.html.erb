<div class="row" style="padding-top: 10px;">
  <div class="col m4">
    <div class="card-panel">
      <i class="fa fa-trophy"></i>
      <span class="info-box-text">Tournaments</span>
      <p class="info-box-number"><%= Tournament.count %></p>
      <p class="info-box-text"><%= Tournament.where('created_at > ?', Time.now - 1.day).count %> (in the last day)</p>
    </div>
  </div>

  <div class="col m4">
    <div class="card-panel">
      <i class="fa fa-user"></i>
      <span class="info-box-text">User Logins</span>
      <p class="info-box-number"><%= User.where('last_sign_in_at > ?', Time.now - 1.week).count %></p>
      <p class="info-box-text">(in the last week)</p>
    </div>
  </div>

  <div class="col m4">
    <div class="card-panel">
      <i class="fa fa-users"></i>
      <span class="info-box-text">Teams</span>
      <p class="info-box-number"><%= Team.count %></p>
      <p class="info-box-text"><%= Team.where('created_at > ?', Time.now - 1.day).count %> (in the last day)</p>
    </div>
  </div>

  <div class="col m4">
    <div class="card-panel">
      <i class="fa fa-map-signs"></i>
      <span class="info-box-text">Fields</span>
      <p class="info-box-number"><%= Field.count %></p>
      <p class="info-box-text"><%= Field.where('created_at > ?', Time.now - 1.day).count %> (in the last day)</p>
    </div>
  </div>

  <div class="col m4">
    <div class="card-panel">
      <i class="fa fa-sitemap"></i>
      <span class="info-box-text">Divisions</span>
      <p class="info-box-number"><%= Division.count %></p>
      <p class="info-box-text"><%= Division.where('created_at > ?', Time.now - 1.day).count %> (in the last day)</p>
    </div>
  </div>

  <div class="col m4">
    <div class="card-panel">
      <i class="fa fa-list"></i>
      <span class="info-box-text">Games</span>
      <p class="info-box-number"><%= Game.count %></p>
      <p class="info-box-text"><%= Game.where('created_at > ?', Time.now - 1.day).count %> (in the last day)</p>
    </div>
  </div>

  <div class="col m4">
    <div class="card-panel">
      <i class="fa fa-file-o"></i>
      <span class="info-box-text">Score Reports</span>
      <p class="info-box-number"><%= ScoreReport.with_deleted.count %></p>
      <p class="info-box-text"><%= ScoreReport.where('created_at > ?', Time.now - 1.day).count %> (in the last day)</p>
    </div>
  </div>
</div>
