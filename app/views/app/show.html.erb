<div id="search-bar" class="bar bar-standard bar-header-secondary hidden">
  <select title='Search...' data-live-search="true" class="selectpicker" data-width="100%"></select>
</div>

<div id="map-canvas" style="position: absolute; width:100%; height: 100%;"></div>

<div class="modal fade" id="point-me-there-modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
        <h4 class="modal-title"></h4>
      </div>
      <div class="modal-body">
        <%= image_tag 'point-me-there.png', id: 'arrow', class: 'arrow' %>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>

<div id="find-drawer" class="drawer">
  <div class="content">
    <ul class="table-view">
      <li class="table-view-cell">
        <a href="#" id="find-field" class="navigate-right">
          Find a field
        </a>
      </li>
      <li href="#" class="table-view-cell">
        <a id="find-team" class="navigate-right">
          Find a team
        </a>
      </li>
    </ul>
  </div>

  <div class="bar bar-standard bar-footer">
    <a class="pull-right" href="#find-drawer">Back to map</a>
  </div>
</div>

<div class="bar bar-standard bar-footer">
  <a href="#find-drawer" class="btn btn-find pull-right">
    Find <i class="fa fa-caret-up"></i>
  </a>
</div>

<script>
  $( document ).ready(function() {
    appMap = new TournamentApp.App(
      <%= @map.location %>,
      <%= @map.zoom %>,
      <%= raw @fields.to_json %>
    );
  });
</script>
