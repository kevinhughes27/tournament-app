<!-- main-view -->
<header class="bar bar-nav">
  <h1 class="title"><%= @tournament.name %></h1>
</header>

<div id="search-bar" class="bar bar-standard bar-header-secondary hidden">
  <select placeholder="Search ..."></select>
</div>

<div class="bar bar-standard bar-footer">
  <a href="#find-drawer" class="btn btn-find pull-right">
    Find <i class="fa fa-caret-up"></i>
  </a>
</div>

<div class="content">
</div>
<div id="map-canvas" style="position: absolute; width: 100%; height: 100%;"></div>
<!-- end main-view -->


<!-- point-me-there modal -->
<div class="modal" id="point-me-there" tabindex="-1">
  <header class="bar bar-standard bar-header-secondary">
    <a class="icon icon-close pull-right" href="#pointMeThereModal"></a>
    <h1 class="title">Title</h1>
  </header>

  <div class="content center">
    <%= image_tag 'point-me-there.png', id: 'arrow', class: 'arrow' %>
  </div>

  <div class="bar bar-standard bar-footer">
    <p>Footer</p>
  </div>
</div>
<!-- end point-me-there modal -->


<!-- find-drawer -->
<div id="find-drawer" class="drawer">
  <div class="content">
    <ul class="table-view">
      <li class="table-view-cell">
        <a href="#" id="find-field" class="navigate-right">
          Find a field
        </a>
      </li>
      <li href="#" class="table-view-cell">
        <a id="find-team" class="navigate-right">
          Find a team
        </a>
      </li>
    </ul>
  </div>

  <div class="bar bar-standard bar-footer">
    <a class="pull-right" href="#find-drawer">Back to map</a>
  </div>
</div>
<!-- end find-drawer -->

<script>
  $( document ).ready(function() {
    app = new TournamentApp.App(
      <%= @map.location %>,
      <%= @map.zoom %>,
      <%= raw @fields.to_json %>,
      <%= raw @teams.to_json %>,
      <%= raw @games.to_json %>
    );
  });
</script>
