<div id="app">
  <div class='search-container container-fluid hidden'>
    <select title='Search...' data-live-search="true" class="selectpicker" data-width="100%"></select>
  </div>

  <div id="map-canvas" style="position: absolute; width:100%; height: 100%;"></div>

  <div class="modal fade" id="point-me-there-modal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">
            <span>&times;</span>
          </button>
          <h4 class="modal-title"></h4>
        </div>
        <div class="modal-body">
          <%= image_tag 'point-me-there.png', id: 'arrow', class: 'arrow' %>
        </div>
        <div class="modal-footer">
        </div>
      </div>
    </div>
  </div>

  <nav class="navbar transparent navbar-fixed-bottom">
    <button class="btn find-btn dropdown pull-right">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">Find <span class="caret"></span></a>
      <ul class="dropdown-menu">
        <li><a href="#" id="find-field">Field</a></li>
        <li><a href="#" id="find-team">Team</a></li>
      </ul>
    </button>
  </nav>
</div>

<script>
  $( document ).ready(function() {
    appMap = new TournamentApp.App(
      <%= @map.location %>,
      <%= @map.zoom %>,
      <%= raw @fields.to_json %>
    );
  });
</script>
