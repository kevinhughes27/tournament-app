<!-- main-view -->
<div class="bar bar-nav bar-tblue">
  <a class="nav-btn pull-left" href="#" bind-event-click="app.scheduleScreen = true">
    <i class="fa fa-list-alt"></i> Schedule
  </a>
  <a class="nav-btn pull-right" href="#" bind-event-click="app.submitScoreScreenA = true">
    Submit a score <i class="fa fa-star-half-o"></i>
  </a>
</div>

<div class="bar bar-standard bar-header-secondary search-bar" bind-show="!!app.fieldSearchOpen">
  <input id="main-field-search" class="awesomplete" type="text" placeholder="Search ..."
    data-minchars="1"
    data-list="<%= @fields.map{ |t| t.name }.join(', ') %>"
    bind-event-change="app.fieldSelected(event)">
</div>

<div class="bar bar-standard bar-header-secondary search-bar" bind-show="!!app.teamSearchOpen">
  <input id="main-team-search" class="awesomplete" type="text" placeholder="Search ..."
    data-minchars="1"
    data-list="<%= @teams.map{ |t| t.name }.join(', ') %>"
    bind-event-change="app.teamSelected(event)">
</div>

<div class="bar bar-standard bar-header-secondary transparent" bind-show="!!app.findingField">
  <a class="nav-btn pull-right" href="#" bind-event-click="app.finishPointToField()">
    <i class="fa fa-times-circle"></i>
  </a>
  <h1 class="title" bind="app.getFindText()"></h1>
</div>

<div class="bar bar-standard bar-footer">
  <a class="btn btn-find pull-right" href="#" bind-event-click="app.drawerOpen = true" bind-show="!(app.drawerOpen || app.scheduleScreen)">
    Find <i class="fa fa-caret-up"></i>
  </a>
</div>

<div class="content">
</div>

<div id="map-canvas" style="position: absolute; width: 100%; height: 100%;"></div>
<!-- end main-view -->


<!-- find-drawer -->
<div class="drawer" bind-class="{active: app.drawerOpen}">
  <div class="content transparent">
    <ul class="table-view">
      <li class="table-view-cell">
        <a href="#" class="navigate-right" bind-event-click="app.showFieldSelect()">
          Find a field
        </a>
      </li>
      <li href="#" class="table-view-cell">
        <a class="navigate-right" bind-event-click="app.showTeamSelect()">
          Find a team
        </a>
      </li>
    </ul>
  </div>

  <div class="bar bar-standard bar-footer">
    <a class="pull-right" href="#" bind-event-click="app.drawerOpen = false">Back to map</a>
  </div>
</div>
<!-- end find-drawer -->
