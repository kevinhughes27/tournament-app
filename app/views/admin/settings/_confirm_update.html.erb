<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
      <h4 class="modal-title">Confirm Handle Change</h4>
    </div>

    <div class="modal-body">
      <p>
        Changing your handle will change the web url of your tournament. If you have distributed
        this link anywhere it will no longer work.
      </p>
    </div>

    <div class="modal-footer">
      <%= form_for @tournament, url: admin_settings_path, html: {
        'bind-event-submit' => "Admin.ActionWithCheck(
          '#{admin_settings_path}',
          'PUT',
          true,
          this
        )"} do |form| %>
        <div class="hide">
          <%= render 'form', form: form %>
        </div>
        <%= hidden_field_tag 'confirm', true %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= form.submit class: 'btn btn-danger js-btn-loadable' %>
      <% end %>
    </div>
  </div>
</div>
