<% content_for :top_bar_left do %>
  <i class="fa fa-cogs"></i>
  Settings / Tournament
<% end %>

<%= content_for :top_bar_right do %>
  <%= ui_save_button_tag('.edit_tournament') %>
<% end %>

<%= render 'admin/errors', object: @tournament %>

<%= ui_box do %>
  <%= form_for @tournament, url: tournament_admin_settings_path(@tournament), method: :put, remote: true do |form| %>

    <%= form.ui_text_field :name %>
    <%= form.ui_text_field :handle %>
    <%= form.ui_number_field :time_cap %>

    <hr>
    <%= form.ui_save_button %>
  <% end %>
<% end %>
