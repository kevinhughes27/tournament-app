<%= form.ui_text_field :name %>

<div class="form-group row" define="{bracketChoice: new Admin.BracketChoice(this)}">
  <div class="col-md-2">
    <%= form.ui_number_field :num_teams, label_html: '# Teams' %>
  </div>

  <div class="col-md-2">
    <%= form.ui_number_field :num_days, min: 1, max: 2, label_html: '# Days' %>
  </div>

  <div class="col-md-8">
    <% options = bracket_options(division) %>
    <%= form.ui_select :bracket_type, 'Bracket', options, disabled:  options.blank? %>

    <div class="panel panel-default subdued">
      <div class="panel-body">
        <i class="fa fa-question-circle"></i>
        Can't find the bracket you need?
        <%= contact_us(text: 'contact us') %>
        and we'll sort you out.
      </div>
    </div>
  </div>
</div>

<hr>

<%= form.ui_save_button %>
