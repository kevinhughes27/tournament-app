<div class="container-fluid" define='{
  scoreReportsTable: new Admin.ScoreReportsTable(
  )}'
  context='scoreReportsTable'>
  <h1>Score Reports</h1>

  <div id="score-reports">
    <div class="input-group" style="padding-bottom: 15px;">
      <div class="input-group-addon">
        <i class="fa fa-search"></i>
      </div>
      <input class="search form-control" placeholder="Search" />
    </div>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th class="sort-header">
            <a href="#" class="sort" data-sort="name">Game</a>
          </th>
          <th>Score</th>
          <th class="sort-header">
            <a href="#" class="sort" data-sort="confirmed">
              Confirmed
            </a>
          </th>
        </tr>
      </thead>
      <tbody class="list">
        <% @games.each do |game| %>
          <%= render 'game', game: game %>
        <% end %>
      </tbody>
    </table>
  </div>

</div>

<script>
  $( document ).ready(function() {
    reportList = new List('score-reports', {
      valueNames: [
        'name',
        'score',
        'submitted-by',
        'submitted-at',
        'confirmed',
        'comments'
      ]
    });

    $("[data-toggle=tooltip]").tooltip();
  });
</script>

<script data-turbolinks-eval=false>
  $( document ).ready(function() {
    reportList.sort('submitted-at', { order: "desc" });
  });
</script>
