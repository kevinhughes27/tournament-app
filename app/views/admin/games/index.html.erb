<section class="content-header">
  <h1>
    Games
  </h1>
</section>

<%= react_component('Admin.GameIndex', { name: 'Olivier' }, {}) %>

<section class="content" define='{
  gamesTable: new Admin.GamesTable(
  )}'
  context='gamesTable'>

  <div id="games" class="box">
    <div class="box-body">
      <div class="input-group" style="padding-bottom: 15px;">
        <div class="input-group-addon">
          <i class="fa fa-search"></i>
        </div>
        <input class="search form-control" placeholder="Search" />
      </div>

      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th class="sort-header">
              <a href="#" class="sort" data-sort="name">Game</a>
            </th>
            <th class="sort-header">
              <a href="#" class="sort" data-sort="division">Division</a>
            </th>
            <th>Score</th>
            <th class="sort-header">
              <a href="#" class="sort" data-sort="confirmed">
                Confirmed
              </a>
            </th>
          </tr>
        </thead>
        <tbody class="list">
          <% @games.each do |game| %>
            <%= render 'game', game: game %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>

<% content_for :javascript do %>
  <script>
    $( document ).ready(function() {
      $("[data-toggle=tooltip]").tooltip();
    });
  </script>
<% end %>
