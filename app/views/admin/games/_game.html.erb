<tr id="game:<%= game.id %>">
  <td class="col-md-8 name">

    <% if game.score_reports.count > 0 %>
      <a href="#reports-<%= game.id %>" data-toggle="collapse">
        <%= game.name %>
        <span class="badge"> <%= game.score_reports.count %> </span>
      </a>
    <% else %>
      <%= game.name %>
    <% end %>

    <div class="collapse" id="reports-<%= game.id %>">
      <div style="padding-top:25px;">
        <div class="panel panel-default">
          <div class="panel-heading">Score Reports</div>
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Score</th>
                <th>Submitted by</th>
                <th>Submitted at</th>
                <th>SOTG</th>
                <th>Comments</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% game.score_reports.each do |report| %>
                <%= render 'score_report', game: game, report: report %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </td>

  <td class="col-md-2 score">
    <a href="#score-form-<%= game.id %>" data-placement="bottom" data-toggle="popover-x">
      <%= game.score %>
    </a>

    <div id="score-form-<%= game.id %>" class="popover popover-default">
      <div class="arrow"></div>
      <h3 class="popover-title">
        <span class="close" data-dismiss="popover-x">&times;</span>
        Update score
      </h3>
      <div class="popover-content">
        <%= form_tag tournament_admin_game_path(@tournament, game),
            method: :put,
            remote: true,
            class: 'form-inline',
            'bind-event-submit' => "updateScore(this)" do |form| %>
          <%= number_field_tag "home_score", game.home_score, class: "form-control score-input" %>
          &mdash;
          <%= number_field_tag "away_score", game.away_score, class: "form-control score-input" %>
          <%= submit_tag "Save", class: "btn btn-default" %>
        <% end %>
      </div>
    </div>
  </td>

  <td class="col-md-2">
    <span class="confirmed hidden"><%= game.unconfirmed? %></span>
    <% if game.unconfirmed? %>
     <i class="fa fa-exclamation-circle" style="color:orange"></i>
    <% else %>
      <i class="fa fa-check" style="color:green"></i>
    <% end %>
  </td>
</tr>
