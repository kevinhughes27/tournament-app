<div class="container-fluid" define='{
  scheduleEditor: new Admin.ScheduleEditor(
  )}'
  context='scheduleEditor'>
  <h1>Schedule</h1>

  <div class="row">
    <% @games.group_by{ |g| g.bracket }.each do |bracket, games| %>

      <div class="col-md-2">
        <h3>
          <%= bracket.division %>
        </h3>
        <% games.each do |game| %>
          <div id="game" class="draggable drag-drop">
            <%= game.name %>
          </div>
        <% end %>
      </div>

    <% end %>
  </div>

  <%= form_tag admin_tournament_schedule_path(@tournament), "bind-event-submit" => "saveSchedule()" do %>
    <table class="table table-bordered table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th>Time</th>
          <% @fields.each do |field| %>
            <th><%= field.name %></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td>
            <input type="text" placeholder="time">
          </td>
          <% @fields.each do |field| %>
            <td class="dropzone"></td>
          <% end %>
        </tr>
      </tbody>
    </table>

    <div class="row">
      <%= submit_tag 'Save Schedule', class: "btn btn-primary pull-right" %>
    </div>
  <% end %>
</div>
