<% content_for :top_bar_left do %>
  <i class="fa fa-map-signs"></i>
  <%= link_to 'Fields', tournament_admin_fields_path(@tournament) %> / <%= @field.name %>
<% end %>

<%= content_for :top_bar_right do %>
  <%= ui_save_button_tag('.edit_field') %>
<% end %>

<%= ui_box do %>
  <%= form_for [@tournament, :admin, @field] do |form| %>
    <%= render 'form', form: form, field: @field %>
  <% end %>
  <%= button_to "delete", [@tournament, :admin, @field], method: :delete, class: 'btn btn-danger' %>
<% end %>
