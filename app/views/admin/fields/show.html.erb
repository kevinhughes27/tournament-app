<% content_for :top_bar_left do %>
  <i class="fa fa-map-signs"></i>
  <%= link_to 'Fields', tournament_admin_fields_path(@tournament) %> / <%= @field.name.present? ? @field.name : 'Edit'%>
<% end %>

<%= content_for :top_bar_right do %>
  <%= ui_save_button_tag(form_id:'.edit_field') %>
<% end %>

<%= render 'admin/errors', object: @field %>

<%= ui_box do %>
  <%= form_for [@tournament, :admin, @field], remote: true do |form| %>
    <%= render 'form', form: form, field: @field %>
  <% end %>
  <%= button_tag 'delete', class: 'btn btn-danger js-btn-loadable',
      'bind-event-click' => "Admin.DeleteWithCheck(
        '#{tournament_admin_field_path(@tournament, @field)}'
      )" %>
<% end %>
