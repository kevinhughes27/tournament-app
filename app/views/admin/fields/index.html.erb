<% content_for :top_bar do %>
  <div class="navbar-brand page-title">
    <i class="fa fa-map-signs"></i>
    Fields
  </div>
<% end %>

<section class="content-header">
  <h1>
    <small>Draw your fields by clicking on the map below:</small>
  </h1>
</section>

<section class="content">
  <div class="box">
    <div class="box-body">
      <div id="map-canvas" style="width:100%; height: 700px;"></div>
    </div>
  </div>

  <%= form_tag tournament_admin_fields_path(@tournament), method: :post do %>
    <div class="box">
      <div class="box-body">
        <table id="fields" class="table table-striped">
          <thead>
            <tr>
              <th>Field</th>
              <th>p1</th>
              <th>p2</th>
              <th>p3</th>
              <th>p4</th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>

      <div class="box-footer clearfix">
        <%= submit_tag 'Save fields', class: "btn btn-primary pull-right" %>
      </div>
    </div>
  <% end %>
</section>

<script>
  $( document ).ready(function() {
    fieldCreator = new Admin.FieldCreator(
      <%= @map.location %>,
      <%= @map.zoom %>,
      <%= raw @fields.to_json %>
    );
  });
</script>
