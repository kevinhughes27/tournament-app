<% content_for :top_bar_left do %>
  <i class="fa fa-map-signs"></i>
  <%= link_to 'Fields', tournament_admin_fields_path(@tournament) %> / New
<% end %>

<%= content_for :top_bar_right do %>
  <%= ui_save_button_tag(form_id:'.new_field') %>
<% end %>

<%= render 'admin/errors', object: @field %>

<%= ui_box do %>
  <%= form_for [@tournament, :admin, @field], remote: true do |form| %>
    <%= render 'form', form: form, field: @field %>
  <% end %>
  <%= link_to "Cancel", tournament_admin_fields_path(@tournament), class: 'btn btn-default' %>
<% end %>
