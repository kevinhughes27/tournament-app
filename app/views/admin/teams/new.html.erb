<% content_for :top_bar_left do %>
  <i class="fa fa-users"></i>
  <%= link_to 'Teams', tournament_admin_teams_path(@tournament) %> / New
<% end %>

<%= content_for :top_bar_right do %>
  <%= ui_save_button_tag('.new_team') %>
<% end %>

