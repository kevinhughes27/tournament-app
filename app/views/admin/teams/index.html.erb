<% content_for :top_bar_left do %>
  <div class="navbar-brand page-title">
    <i class="fa fa-users"></i>
    Teams
  </div>
<% end %>

<%= content_for :top_bar_right do %>
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#importCsvModal">
    Import
  </button>
  <%= link_to 'New', new_tournament_admin_team_path(@tournament), class: "btn btn-primary" %>
<% end %>

<%= render 'import_csv_modal' %>

<%= admin_content do %>
  <%= react_component('Admin.TeamsIndex', {
    teams: render(template: 'admin/teams/teams.json.jbuilder'),
    searchColumns: [
      "name",
      "email",
      "sms",
      "division",
      "seed"
    ],
    filters: [
      {text: 'Open Division', key: 'division', value: 'Open'},
      {text: 'Womens Division', key: 'division', value: 'Women'},
      {text: 'Coed Comp Division', key: 'division', value: 'Coed Comp'},
      {text: 'Junior Open Division', key: 'division', value: 'Junior Open'}
    ]
  }) %>
<% end %>
