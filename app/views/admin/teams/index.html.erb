<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Listing Teams</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Sms</th>
        <th>Twitter</th>
        <th>Division</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td><%= team.name %></td>
          <td><%= team.email %></td>
          <td><%= team.sms %></td>
          <td><%= team.twitter %></td>
          <td><%= team.division %></td>
          <td><%= link_to 'Edit', edit_admin_tournament_team_path(@tournament, team) %></td>
          <td><%= link_to 'Destroy', admin_tournament_team_path(@tournament, team), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>%>
</div>
