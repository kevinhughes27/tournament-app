<% content_for :top_bar_left do %>
  <i class="fa fa-users"></i>
  <%= link_to 'Teams', admin_teams_path %> / <%= link_to @team.name, admin_team_path(@team) %> / Spirit
<% end %>

<%= content_for :top_bar_right do %>
  <%= link_to 'Back', admin_team_path(@team), class: "btn btn-default" %>
<% end %>

<% if @reports.present? %>
  <%= ui_box do %>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Score</th>
          <th>Submitted by</th>
          <th>SOTG</th>
          <th>Comments</th>
        <tr>
      </thead>
      <tbody>
        <% @reports.each do |report| %>
          <tr>
            <td><%= report.score %></td>
            <td><%= report.submitted_by %></td>
            <td><%= report.sotg_score %></td>
            <td><%= report.comments %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>
<% else %>
  <div class="blank-slate">
    <h3>Score Reports</h3>
    <p>
      As scores are submitted you'll be able to see the spirit scores for this
      team on this page. Useful for giving feedback!
    </p>
  </div>
<% end %>
