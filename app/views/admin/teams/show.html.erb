<% content_for :top_bar_left do %>
  <i class="fa fa-users"></i>
  <%= link_to 'Teams', admin_teams_path %> / <%= @team.name.present? ? @team.name : 'Edit' %>
<% end %>

<%= content_for :top_bar_right do %>
  <%= ui_save_button_tag(form_id:'.edit_team') %>
<% end %>

<div class="row">
  <div class="col-md-8">
    <%= render 'admin/errors', object: @team %>

    <%= ui_box do %>
      <%= form_for [:admin, @team], html: {
        'bind-event-submit' => "Admin.ActionWithCheck(
          '#{admin_team_path(@team)}',
          'PUT',
          false,
          this
        )"} do |form| %>
        <%= render 'form', form: form, team: @team %>
        <hr>
        <%= form.ui_save_button %>
      <% end %>
        <%= button_tag 'delete', class: 'btn btn-danger js-btn-loadable',
            'bind-event-click' => "Admin.ActionWithCheck(
              '#{admin_team_path(@team)}',
              'DELETE'
            )" %>
    <% end %>
  </div>
</div>
