<% content_for :top_bar_left do %>
  <i class="fa fa-users"></i>
  <%= link_to 'Teams', tournament_admin_teams_path(@tournament) %> / <%= @team.name.present? ? @team.name : 'Edit' %>
<% end %>

<%= content_for :top_bar_right do %>
  <%= ui_save_button_tag(form_id:'.edit_team') %>
<% end %>

<div class="row">
  <div class="col-md-8">
    <%= render 'admin/errors', object: @team %>

    <%= ui_box do %>
      <%= form_for [@tournament, :admin, @team], remote: true do |form| %>
        <%= render 'form', form: form, team: @team %>
      <% end %>
        <%= button_tag 'delete', class: 'btn btn-danger js-btn-loadable',
            'bind-event-click' => "Admin.DeleteWithCheck(
              '#{tournament_admin_team_path(@tournament, @team)}'
            )" %>
    <% end %>
  </div>
</div>
