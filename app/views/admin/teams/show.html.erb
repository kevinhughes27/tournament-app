<% content_for :top_bar do %>
  <div class="navbar-brand page-title">
    <i class="fa fa-users"></i>
    <%= link_to 'Teams', tournament_admin_teams_path(@tournament) %> / <%= @team.name %>
  </div>

  <div class="navbar-form navbar-right">
    <%= button_tag 'Save', class: "btn btn-primary", onclick: "$('.edit_team').submit()" %>
  </div>
<% end %>

<%= admin_content_box do %>
  <%= form_for [@tournament, :admin, @team] do |form| %>
    <%= render 'form', form: form, team: @team %>
  <% end %>
<% end %>
