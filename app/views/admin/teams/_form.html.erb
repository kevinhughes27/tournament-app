<%= form_for [@tournament, :admin, team] do |form| %>
  <%= render 'admin/errors', object: team %>

  <div class="from-group">
    <%= form.label :name %><br>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="from-group">
    <%= form.label :email %><br>
    <%= form.text_field :email, class: 'form-control' %>
  </div>

  <div class="from-group">
    <%= form.label :sms %><br>
    <%= form.text_field :sms, class: 'form-control' %>
  </div>

  <div class="from-group">
    <%= form.label :division %><br>
    <%= form.text_field :division, class: 'form-control' %>
  </div>

  <div class="from-group">
    <%= form.label :seed %><br>
    <%= form.number_field :seed, class: 'form-control' %>
  </div>

  <div class="from-group">
    <%= submit_tag 'Save', class: 'btn btn-primary pull-right' %>
  </div>
<% end %>
