<div id="animatedModal">
  <div id="closebt-container" class="close-animatedModal">
    <%= image_tag "brochure/closebt.svg", class: "closebt" %>
  </div>

  <div class="modal-content">
    <%= form_for User.new, url: new_user_signup_path do |f| %>

      <div class="form-group">
        <%= f.text_field :email,
                         placeholder: 'Email',
                         class: 'form-control input-lg' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password,
                             placeholder: 'Password',
                             class: 'form-control input-lg',
                             autocomplete: 'off' %>
      </div>

      <div class="form-group text-center">
        <%= f.submit "Sign up", class: 'btn btn-lg btn-block btn-primary' %>
      </div>

      <div class="form-group text-center">or</div>

      <div class="social-auth-links text-center">
        <%= link_to user_google_oauth2_omniauth_authorize_url(subdomain: 'www'),
              class: "btn btn-block btn-social btn-google btn-flat" do %>
          <span class="fa fa-google"></span> Sign up with Google
        <% end %>

        <%= link_to user_facebook_omniauth_authorize_url(subdomain: 'www'),
              class: "btn btn-block btn-social btn-facebook btn-flat", style: "margin-bottom: 5px;" do %>
          <span class="fa fa-facebook"></span> Sign up with Facebook
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="modal-footer">
    by signing up you agree to our <%= link_to 'terms of service', tos_path, target: '_blank' %>
  </div>
</div>
