<div id="animatedModal">
  <div id="closebt-container" class="close-animatedModal" track-click="{category: 'Signup.Modal', action: 'close'}">
    <%= image_tag "brochure/closebt.svg", class: "closebt" %>
  </div>

  <div class="modal-content">
    <%= form_for User.new, url: new_user_signup_path do |f| %>

      <div class="form-group">
        <%= f.text_field :email,
                         placeholder: 'Email',
                         class: 'form-control input-lg' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password,
                             placeholder: 'Password',
                             class: 'form-control input-lg',
                             autocomplete: 'off' %>
      </div>

      <div class="form-group text-center">
        <%= f.submit "Sign up",
            class: 'btn btn-lg btn-block btn-primary',
            "track-click" => "{category: 'Signup.Modal', action: 'click_signup'}" %>
      </div>

      <div class="form-group text-center">or</div>

      <div class="social-auth-links text-center">
        <%= link_to user_omniauth_authorize_path(:google_oauth2),
              class: "btn btn-block btn-social btn-google btn-flat",
              "track-click" => "{category: 'Signup.Modal', action: 'click_google'}" do %>
          <span class="fa fa-google"></span> Sign up with Google
        <% end %>

        <%= link_to user_omniauth_authorize_path(:facebook),
              class: "btn btn-block btn-social btn-facebook btn-flat", style: "margin-bottom: 5px;",
              "track-click" => "{category: 'Signup.Modal', action: 'click_facebook'}" do %>
          <span class="fa fa-facebook"></span> Sign up with Facebook
        <% end %>
      </div>
    <% end %>
  </div>
  </div>
</div>
