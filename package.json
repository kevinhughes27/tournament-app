{
  "name": "ultimate-tournament",
  "private": true,
  "engines": {
    "node": "10.x"
  },
  "subPackages": [
    "clients/player_app",
    "clients/admin"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^3.0.8",
    "lint-staged": "^9.4.2"
  },
  "scripts": {
    "postinstall": "subpkg install",
    "build": "subpkg run-script build",
    "heroku-postbuild": "npm run build",
    "dev:admin": "cd clients/admin && yarn start",
    "dev:player_app": "cd clients/player_app && yarn start"
  },
  "dependencies": {
    "subpackage": "^1.1.0"
  },
  "cacheDirectories": [
    "node_modules",
    "clients/player_app/node_modules",
    "clients/admin/node_modules"
  ]
}
