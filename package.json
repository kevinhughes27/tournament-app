{
  "name": "ultimate-tournament",
  "private": true,
  "engines": {
    "node": ">= 6.11.1",
    "yarn": ">= 0.24.5"
  },
  "subPackages": [
    "server/client",
    "player-app"
  ],
  "scripts": {
    "postinstall": "subpkg install",
    "build": "subpkg build",
    "hot-assets": "cd server/client && yarn run hot-assets",
    "server": "cd server && bundle exec rails server"
  },
  "dependencies": {
    "nsp": "^2.6.3",
    "subpackage": "^1.1.0"
  },
  "cacheDirectories": [
    "node_modules",
    "server/client/node_modules"
  ]
}
