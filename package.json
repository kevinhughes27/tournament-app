{
  "name": "ultimate-tournament",
  "private": true,
  "engines": {
    "node": "7.10.0",
    "yarn": "0.24.5"
  },
  "scripts": {
    "postinstall": "cd client && yarn install",
    "build:clean": "rm app/assets/webpack/* 2> /dev/null",
    "build:production": "(cd client && npm run build:production)",
    "build:dev": "(cd client && npm run build:dev)",
    "hot-assets": "(cd client && npm run hot-assets)",
    "dev": "foreman start -f Procfile.hot -p 3000"
  },
  "dependencies": {
    "nsp": "^2.6.3"
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules"
  ]
}
